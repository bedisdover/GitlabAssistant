<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="cn.edu.nju.bedisdover.gitlabassistant.view.activity.StudentActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_student"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav_student"
        android:layout_alignParentTop="true">

    </android.support.v4.view.ViewPager>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_nav_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_student"
        app:itemBackground="@android:color/white">
    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>
