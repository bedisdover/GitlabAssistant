<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:toolbar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_score"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cn.edu.nju.bedisdover.gitlabassistant.view.activity.ScoreActivity"
        android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            toolbar:navigationIcon="@drawable/ic_arrow_back_24dp"
            android:background="@color/colorPrimary"
            toolbar:title=""
            toolbar:titleTextColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

    <ListView
            android:id="@+id/lv_score"
            android:padding="15dp"
            android:dividerHeight="5dp"
            android:divider="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>
