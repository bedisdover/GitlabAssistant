<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="cn.edu.nju.bedisdover.gitlabassistant.view.activity.TeacherActivity">

    <android.support.v4.view.ViewPager
            android:id="@+id/vp_teacher"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/bottom_nav_teacher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_nav_teacher"
            android:background="@mipmap/shadow"/>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_nav_teacher"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/menu_teacher"
            app:itemBackground="@android:color/white"/>

</RelativeLayout>
